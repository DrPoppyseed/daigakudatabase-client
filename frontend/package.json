{
  "name": "daigakudatabase/frontend",
  "author": "Haruki Jay Shimada",
  "version": "0.3.0",
  "license": "MIT",
  "description": "â› Active development branch of DaigakuDatabase.com ",
  "repository": {
    "url": "https://github.com/DrPoppyseed/daigakudatabase-client",
    "type": "git"
  },
  "packageManager": "pnpm@6.32.3",
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "test": "jest --watchAll=false",
    "test:watch": "jest",
    "preview": "vite preview",
    "analyze": "ANALYZE=true pnpm build",
    "lint": "eslint 'src/**/*.{ js,jsx,ts,tsx }'",
    "lint:fix": "eslint --fix 'src/**/*.{ js,jsx,ts,tsx }'",
    "format": "prettier --write './**/*.{js,jsx,ts,tsx,md,json}'"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ],
    "coverageReporters": [
      "text"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-prettier",
      "stylelint-config-recess-order"
    ]
  },
  "lint-staged": {
    "**/*.{ ts,tsx }": [
      "pnpm run lint:fix",
      "pnpm run format"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid",
    "semi": false,
    "useTabs": false,
    "tabWidth": 2,
    "jsxSingleQuote": true
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=6.0.0"
  },
  "dependencies": {
    "@emotion/react": "^11.9.0",
    "@emotion/styled": "^11.8.1",
    "@firebase/app": "^0.7.24",
    "@firebase/app-types": "^0.7.0",
    "@hookform/resolvers": "^2.8.10",
    "@mui/icons-material": "^5.6.2",
    "@mui/material": "^5.7.0",
    "@mui/styles": "^5.7.0",
    "@mui/system": "^5.7.0",
    "@reduxjs/toolkit": "^1.8.1",
    "@rollup/plugin-image": "^2.1.1",
    "@types/d3": "^7.1.0",
    "@types/node": "^17.0.34",
    "@types/react": "^17.0.45",
    "@types/react-dom": "^17.0.17",
    "@types/react-helmet": "^6.1.5",
    "@types/react-redux": "^7.1.24",
    "@vitejs/plugin-react": "^1.3.2",
    "d3": "^7.4.4",
    "firebase": "^9.8.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-helmet": "^6.1.0",
    "react-hook-form": "^7.31.1",
    "react-intl": "^5.25.1",
    "react-redux": "^7.2.8",
    "react-router-dom": "^6.3.0",
    "rollup-plugin-visualizer": "^5.6.0",
    "vite": "^2.9.9",
    "vite-plugin-checker": "^0.4.6"
  },
  "devDependencies": {
    "@babel/core": "^7.17.12",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^12.1.5",
    "@types/jest": "^27.5.1",
    "@types/react-test-renderer": "^17.0.2",
    "@typescript-eslint/eslint-plugin": "^5.24.0",
    "@typescript-eslint/parser": "^5.24.0",
    "eslint": "^8.15.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^16.2.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-formatjs": "^3.1.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.5.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.4.1",
    "pinst": "^3.0.0",
    "prettier": "^2.6.2",
    "react-test-renderer": "^17.0.2",
    "rollup": "^2.73.0",
    "stylelint": "^14.8.2",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^25.0.0",
    "typescript": "^4.6.4"
  }
}
